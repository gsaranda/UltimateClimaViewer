<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_data_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@drawable/left_rounded_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_data_to_display"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/right_rounded_shape"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tv_data_description"
        app:layout_constraintLeft_toRightOf="@id/tv_data_description"
        app:layout_constraintTop_toTopOf="@+id/tv_data_description" />

</android.support.constraint.ConstraintLayout>
